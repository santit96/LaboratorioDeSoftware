<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="Modo Reconocimiento">

        <ListPreference
            android:defaultValue="1"
            android:enabled="true"
            android:entries="@array/formatoReconocimiento"
            android:entryValues="@array/formatoReconocimiento"
            android:key="list_formato_reconocimiento"
            android:persistent="true"
            android:title="Seleccione el formato de reconocimiento" />
        <MultiSelectListPreference
            android:defaultValue="@array/modosReconocimiento"
            android:enabled="true"
            android:entries="@array/modosReconocimiento"
            android:entryValues="@array/modosInteraccion"
            android:key="multi_select_modo_reconocimiento"
            android:persistent="true"
            android:title="Seleccione el modo de reconocimiento" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Mini Juego">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/miniJuegos"
            android:entryValues="@array/miniJuegos"
            android:key="list_mini_juego"
            android:title="Seleccione mini juego"
            android:persistent="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="Modo de interaccion">

        <ListPreference
            android:defaultValue="1"
            android:entries="@array/modosInteraccion"
            android:entryValues="@array/modosInteraccion"
            android:key="list_modo_interaccion"
            android:persistent="true"
            android:title="Modos de interacciÃ³n" />
    </PreferenceCategory>
    <PreferenceCategory android:title="Ajustes">

        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_nivel"
            android:persistent="true"
            android:switchTextOff="Nivel 1"
            android:switchTextOn="Nivel 2"
            android:title="Seleccione nivel" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="switch_voz"
            android:persistent="true"
            android:switchTextOff="Femenina"
            android:switchTextOn="Masculina"
            android:title="Seleccione tipo de voz" />
    </PreferenceCategory>
</PreferenceScreen>